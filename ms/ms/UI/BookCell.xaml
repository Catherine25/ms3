<?xml version="1.0" encoding="UTF-8"?>
<ViewCell xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ms.UI.BookCell">
  <ViewCell.View>
        <Grid>
            <Image x:Name="image"
                   Source="{Binding Image}"
                   HorizontalOptions="Start"
                   Grid.Column="0"
                   Grid.Row="0"
                   Grid.ColumnSpan="2"
                   Grid.RowSpan="2"/>
          
            <Label x:Name="authorLabel"
                   FontSize="Micro"
                   TextColor="Black"
                   FontAttributes="Bold"
                   Text="{Binding Author}"
                   HorizontalOptions="Start"
                   Grid.Column="1"
                   Grid.ColumnSpan="4"
                   Grid.Row="0"/>
          
            <Label x:Name="descLabel"
                   Text="{Binding Desc}"
                   FontSize="Micro"
                   HorizontalOptions="Start"
                   Grid.Column="1"
                   Grid.ColumnSpan="4"
                   Grid.Row="1"/>
        </Grid>
  </ViewCell.View>
</ViewCell>